import asyncio
import time
from time import sleep
from userbot.events import register
@register(outgoing=True, pattern="^.clrm")
async def Clear(self):
    await self.edit("ᅠ")
       
@register(outgoing=True, pattern="^.clrmt (.*)")
async def ClearTEXT(self):
    mess = str(self.pattern_match.group(1))
    mess_send = await self.edit(mess)
    sleep(0.5)
    await mess_send.delete()
    await self.respond("ㅤ")
