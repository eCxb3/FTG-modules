import asyncio
import time
from time import sleep
from userbot.events import register
@register(outgoing=True, pattern="^.clrm (.*)")
async def Clear(message):
    await message.delete()
    mess = str(message.pattern_match.group(1))
    print("\n\n\n\n\n\n\n\n" + "mess=(" + mess + ")" + "\n\n\n\n\n\n\n\n\n\n\n")
    if mess == "":
        await message.respond("ᅠ")
    else:
        mess_send = await message.respond(mess)
        sleep(0.5)
        await mess_send.delete()
        await message.respond("ㅤ")
